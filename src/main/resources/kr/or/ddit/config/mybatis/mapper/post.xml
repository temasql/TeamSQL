<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">

	<!-- Insert -->
	<insert id="insert" parameterType="postVo">
		INSERT INTO POST
		(
			...
		)
		VALUES
		(
			...
		)
	</insert>
	
	<!-- SelectOne -->
	<select id="get" parameterType="String" resultType="POSTVo">
		SELECT *
		FROM POST
		WHERE ID = #{id}
	</select>
	
	<!-- SelectList -->
	<select id="list" resultType="POSTVo">
		SELECT *
		FROM POST
	</select>
	
	<select id="map" parameterType="map" resultType="POSTVo">
		SELECT *
		FROM POST
		WHERE ID = #{map1}
		AND .. = #{map2}
		...
	</select>
	
	<!-- update -->
	<update id="update" parameterType="POSTVo">
		UPDATE POST
		SET COLUMN = #{..}
		WHERE ID = #{id}
	</update>
	
	<!-- delete -->
	<delete id="delete" parameterType="String">
		DELETE
		FROM POST
		WHERE ID = #{id}
	</delete>

</mapper>