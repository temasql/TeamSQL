<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teamChatRoom">

	<!-- Insert -->
	<insert id="insertTeamChatRoom" parameterType="teamChatRoomVo">
		INSERT INTO TEAM_CHAT_ROOM
		VALUES (
			TEAM_CHAT_ROOM_SEQ.NEXTVAL,
			#{account_id_fk},
			#{user_id_fk},
			#{chat_room_name}
		)
	</insert>
	
	<!-- SelectOne -->
	<select id="getChatRoomId" parameterType="String" resultType="teamChatRoomVo">
		SELECT 	CHAT_ROOM_ID,
				CHAT_ROOM_NAME
		FROM 	TEAM_CHAT_ROOM
		WHERE 	USER_ID_FK =
		    (SELECT USER_ID_FK
		    FROM ACCOUNT
		    WHERE ACCOUNT_ID = #{accountId})
		AND ACCOUNT_ID_FK = #{accountId}
	</select>
	
	<!-- SelectList -->
	<select id="chatRoomList" parameterType="String" resultType="teamChatRoomVo">
		SELECT 	*
		FROM 	TEAM_CHAT_ROOM
		WHERE	USER_ID_FK = #{user_id_fk}
	</select>
	
	<select id="map" parameterType="map" resultType="teamChatRoomVo">
		SELECT *
		FROM TEAM_CHAT_ROOM
		WHERE ID = #{map1}
		AND .. = #{map2}
		...
	</select>
	
	<!-- update -->
	<update id="update" parameterType="teamChatRoomVo">
		UPDATE TEAM_CHAT_ROOM
		SET COLUMN = #{..}
		WHERE ID = #{id}
	</update>
	
	<!-- delete -->
	<delete id="delete" parameterType="String">
		DELETE
		FROM TEAM_CHAT_ROOM
		WHERE ID = #{id}
	</delete>

</mapper>