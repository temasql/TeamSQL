<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="history">

	<!-- Insert -->
	<insert id="insert" parameterType="historyVo">
		INSERT INTO DDL_HISTORY
		(
			...
		)
		VALUES
		(
			...
		)
	</insert>
	
	<!-- DB계정 리스트 -->
	<select id="accountList" parameterType="String" resultType="String">
		select account_id
		from account
		where user_id_fk = #{user_id}
		order by account_id desc
	</select>
	
	<!-- DB계정명,마지막변경일 리스트 -->
	<select id="changedList" parameterType="String" resultType="historyVo">
		select object_owner,
		       max(exec_dtm)
		from DDL_HISTORY
		where object_owner = #{account_id}
		group by object_owner
		
	</select>
	
	
	
	<select id="map" parameterType="map" resultType="historyVo">
		SELECT *
		FROM DDL_HISTORY
		WHERE ID = #{map1}
		AND .. = #{map2}
		...
	</select>
	
	<!-- update -->
	<update id="update" parameterType="historyVo">
		UPDATE DDL_HISTORY
		SET COLUMN = #{..}
		WHERE ID = #{id}
	</update>
	
	<!-- delete -->
	<delete id="delete" parameterType="String">
		DELETE
		FROM DDL_HISTORY
		WHERE ID = #{id}
	</delete>

</mapper>